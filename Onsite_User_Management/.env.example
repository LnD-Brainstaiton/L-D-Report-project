# Database
DATABASE_URL=postgresql://user:password@localhost:5432/enrollment_db

# Security
SECRET_KEY=your-secret-key-here

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Application
ENVIRONMENT=development
DEBUG=True

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Admin Authentication
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# Email Configuration (for class reminders)
SMTP_ENABLED=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=True
REMINDER_MINUTES_BEFORE=30

# LMS Configuration
LMS_TOKEN=your-lms-token
LMS_BASE_URL=https://lms.elearning23.com/webservice/rest/server.php

# ERP Configuration
BS_ERP_GRAPHQL_URL=https://staging-erp.bs23.net
BS_ERP_API_KEY=your-erp-api-key
